<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Shreayan Chat</title>
  <link rel="stylesheet" href="/styles/theme.css" />
</head>
<body class="page">
  <!-- Header -->
  <header class="container">
    <div class="brand" role="banner">
      <div class="brand__left">
        <button
          class="theme-toggle"
          type="button"
          aria-label="Open sidebar"
          data-sidebar-toggle>
          ☰
        </button>
        <div class="brand__logo" aria-hidden="true"></div>
        <h1 class="brand__title">Shreayan Chat</h1>
      </div>
      <button
        class="theme-toggle"
        type="button"
        data-toggle-theme
        aria-label="Toggle light/dark mode">
        Light Mode
      </button>
    </div>
  </header>

  <!-- Main App -->
  <main class="container app">
    <!-- Sidebar -->
    <aside class="sidebar" aria-label="Previous chats" data-sidebar>
      <div class="sidebar__header">
        <strong>Chats</strong>
        <button class="theme-toggle" type="button" data-new-chat aria-label="Start new chat">New</button>
      </div>

      <!-- Search -->
      <div class="search">
        <label for="search-chats" class="visually-hidden">Search chats</label>
        <input
          id="search-chats"
          type="search"
          placeholder="Search chats"
          aria-label="Search chats" />
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M15.5 15.5L21 21" stroke="#94a3b8" stroke-width="1.5" stroke-linecap="round" />
          <circle cx="10.5" cy="10.5" r="6.5" stroke="#94a3b8" stroke-width="1.5" />
        </svg>
      </div>

      <!-- Thread List -->
      <nav>
        <ul class="sidebar__list" data-thread-list>
          <li>
            <button class="thread" aria-current="true" data-thread-id="1">
              Getting started
            </button>
          </li>
        </ul>
      </nav>
    </aside>

    <!-- Chat Section -->
    <section class="chat" aria-label="Chat conversation">
      <div class="chat__inner">
        <!-- Messages -->
        <div class="messages" data-chat-list>
          <div class="msg">
            <div class="msg__avatar" aria-hidden="true"></div>
            <div class="msg__bubble">Hello! Ask me anything.</div>
          </div>
        </div>

        <!-- Composer -->
        <div class="composer">
          <form class="composer__form" data-chat-form>
            <label for="chat-input" class="visually-hidden">Type your message</label>
            <textarea
              id="chat-input"
              class="composer__input"
              rows="1"
              placeholder="Message ChatGPT"
              aria-label="Message"
              data-chat-input
              autocomplete="off">
            </textarea>
            <button class="button composer__send" type="submit" aria-label="Send message">
              ▶
            </button>
          </form>
        </div>
      </div>
    </section>
  </main>

  <!-- Overlay -->
  <div class="overlay" data-overlay></div>

  <!-- Scripts -->
  <script src="/script/theme.js" defer></script>
  <script src="/script/chat.js" defer></script>
</body>
</html>
