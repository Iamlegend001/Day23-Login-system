<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create your account</title>
    <link rel="stylesheet" href="/styles/variables.css" />
    <link rel="stylesheet" href="/styles/auth-form.css" />
  </head>
  <body class="auth-page">
    <main class="container">
      <div class="brand" aria-hidden="false">
        <div class="brand__left">
          <div class="brand__logo"></div>
          <div class="brand__title">Shreayan</div>
        </div>
        <button class="theme-toggle" type="button" data-toggle-theme>
          Light mode
        </button>
      </div>

      <section class="card" aria-labelledby="register-title">
        <h1 id="register-title">Create your account</h1>
        <p class="subtitle">It takes less than a minute.</p>

        <form action="/auth/register" method="post" novalidate>
          <div class="form-group">
            <label for="email">Email</label>
            <div class="input-wrap">
              <svg
                class="input-icon"
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
                aria-hidden="true"
              >
                <path
                  d="M4 6h16a1 1 0 0 1 .8 1.6l-8 10a1 1 0 0 1-1.6 0l-8-10A1 1 0 0 1 4 6Z"
                  fill="#64748b"
                />
                <path
                  d="M20 6l-8 10L4 6"
                  stroke="#64748b"
                  stroke-width="1.2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                />
              </svg>
              <input
                id="email"
                name="email"
                type="email"
                class="input"
                placeholder="you@example.com"
                autocomplete="email"
                required
              />
            </div>
          </div>

          <div class="form-group">
            <label for="username">Username</label>
            <div class="input-wrap">
              <svg
                class="input-icon"
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
                aria-hidden="true"
              >
                <path
                  d="M12 12a5 5 0 1 0-5-5 5 5 0 0 0 5 5Zm0 2c-4 0-8 2-8 5v1h16v-1c0-3-4-5-8-5Z"
                  fill="#64748b"
                />
              </svg>
              <input
                id="username"
                name="username"
                type="text"
                class="input"
                placeholder="your username"
                autocomplete="username"
                minlength="3"
                required
              />
            </div>
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <div class="input-wrap">
              <svg
                class="input-icon"
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
                aria-hidden="true"
              >
                <rect
                  x="3"
                  y="10"
                  width="18"
                  height="11"
                  rx="2"
                  fill="#64748b"
                />
                <path
                  d="M8 10V8a4 4 0 1 1 8 0v2"
                  stroke="#e2e8f0"
                  stroke-width="1.4"
                />
              </svg>
              <input
                id="password"
                name="password"
                type="password"
                class="input"
                placeholder="••••••••"
                autocomplete="new-password"
                minlength="6"
                required
              />
            </div>
          </div>

          <button class="button" type="submit">Create account</button>
          <span class="helper"
            >Already have an account? <a href="/auth/login">Sign in</a></span
          >
        </form>
      </section>
    </main>

    <script src="/script/theme.js" defer></script>
  </body>
</html>
